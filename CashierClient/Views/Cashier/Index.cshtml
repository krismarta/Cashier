
@{
    ViewData["Title"] = "Cashier Account";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Cashier</h1>
    <div class="btncreate float-none text-right">
        <button type="button" class="btn btn-primary" data-toggle="modal" onclick="showCreateCashier()">
            <span class="fas fa-plus-square">&nbsp;</span>
            Create New Cashier
        </button>

    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List Cashier</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive tablediv">
            <table id="listcashier" class="table table-hover table-bordered" width="100%" cellspacing="0">
                <thead class="thead-light font-weight-bold text-primary">
                    <tr class="">
                        <td>ID Cashier</td>
                        <td>Name</td>
                        <td>Phone</td>
                        <td>Email</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody id="listcashiers">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Insert And Update-->
<div class="modal fade createCashier" id="createCashier" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="labelText">Create New Cashier</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="fCashier" class="needs-validation" novalidate>
                <div class="modal-body">

                    <div class="form-row">

                        <div class="col">
                            <div class="form-group has-feedback">
                                <label for="inputId">ID</label>
                                <input type="text" class="form-control textbox" id="inputId" placeholder="Enter ID" required />
                                <div class="invalid-feedback">
                                    ID Masih kosong / tidak sesuai dengan format
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputName">Name</label>
                                <input type="text" class="form-control textbox" id="inputName" placeholder="Enter Name" required />

                                <div class="invalid-feedback">
                                    Name Masih kosong / tidak sesuai dengan format
                                </div>
                            </div>
                         </div>

                        <div class="col">
                            <div class="form-group">
                                <label for="inputEmail">Email</label>
                                <input type="email" class="form-control textbox" id="inputEmail" placeholder="Enter Email" required />
                                <div class="invalid-feedback">
                                    Email Masih kosong / tidak sesuai dengan format
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPhone">Phone</label>
                                <input type="text" class="form-control textbox" id="inputPhone" placeholder="Enter Phone" required />
                                <div class="invalid-feedback">
                                    Phone Masih kosong / tidak sesuai dengan format
                                </div>
                            </div>
                        </div>
                            

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="btnSaveCashier" class="btn btn-info"><span class="fas fa-save">&nbsp;</span>Save New Cashier</button>
                    @*<button type="button" class="btn btn-info" onclick="getgender()"><span class="fas fa-save">&nbsp;</span>Testgetgender</button>*@
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/cashier.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.1.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.print.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Bootstrap Date-Picker Plugin -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>

}







