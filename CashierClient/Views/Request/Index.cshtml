@{
    ViewData["Title"] = "Request Stok";
}
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Request Stok </h1>
</div>

<div class="row">

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Request Stok to Supplier</h6>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col">
                            <p class="font-weight-bold ">Info Manager</p>
                            <div class="form-group">
                                <input type="text" id="edtid" class="form-control" placeholder="ID Manager" disabled>
                            </div>
                            <div class="form-group">
                                <input type="text"  id="edtname" class="form-control" placeholder="Name Manager" disabled>
                            </div>
                            <div class="form-group">
                                <input type="text"  id="edtemail" class="form-control" placeholder="Email Manager" disabled>
                            </div>
                            <div class="form-group">
                                <input type="text"  id="edtphone" class="form-control" placeholder="Phone Manager" disabled>
                            </div>

                        </div>
                        <div class="col">
                            <p class="font-weight-bold ">Info Supplier</p>
                            <div class="form-group">
                                <select name="inputsupplier" class="form-control" id="inputsupplier" onchange="changeSup(this)" required>
                                    <option value="" selected="selected">Choose Supplier</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" id="edtidsup" placeholder="id" disabled>
                                <input type="text" class="form-control" id="ednamesup" placeholder="Name" disabled>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="edtmailsup" placeholder="Email" disabled>
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" id="edtcompsup" placeholder="Compnany Name" disabled>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="edtphonesup" placeholder="Phone" disabled>
                            </div>


                        </div>
                        <div class="col">
                            <p class="font-weight-bold "> Info Goods</p>
                            <div class="form-group">
                                <select name="inputgoods" class="form-control" id="inputgoods" onchange="changeGoods(this)" required>
                                    <option value="" selected="selected">Choose Goods</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" id="edtidgoods" placeholder="id" disabled>
                                <input type="text" class="form-control" id="edtnamegoods" placeholder="Name" disabled>
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" id="edtsellgoods" placeholder="Price Sell" disabled>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="edtbuygoods" placeholder="Price Buy" disabled>
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" id="edtcategorygoods" placeholder="Category" disabled>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="edtstokgoods" placeholder="Stok Saat ini" disabled>
                            </div>
                        </div>

                        <div class="col">
                            <p class="font-weight-bold ">Request Goods Stok</p>
                            <div class="form-group">
                                <input type="number" class="form-control" id="edtstokgoodsreq" placeholder="Request Stok">
                            </div>
                            <button type="button" id="btnaddtmp" class="btn btn-primary btn-block">
                                Process
                            </button>
                        </div>
                    </div>
                </form>
                <hr />
                <hr />
                <div class="row">
                    <div class="col">
                        <div class="table-responsive tablediv">
                            <table id="listtemp" class="table table-hover table-bordered" width="100%" cellspacing="0">
                                <thead class="thead-light font-weight-bold text-primary">
                                    <tr class="">
                                        <td>ID Goods</td>
                                        <td>Name Goods</td>
                                        <td>Current Stok</td>
                                        <td>Request Stok</td>
                                        <td>Sub Total</td>
                                        <td>Action</td>
                                    </tr>
                                </thead>
                                <tbody id="listtempbody">
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <button type="button" id="btnexport" onclick="SendRequest()" class="btn btn-primary btn-block">
                        Request Now
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        var idLogin = "@ViewData["idLogin"]";
    </script>
    <script src="~/js/Requeststok.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.1.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.print.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Bootstrap Date-Picker Plugin -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>

}