@{
    ViewData["Title"] = "My Profile";
}
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">My Profile</h1>
</div>

<div class="row justify-content-center">
    <div class="col-6 ">
        <div class="card shadow mb-4 ">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">My Profile</h6>
            </div>
            <div class="card-body ">
                <div class="row">
                    <div class="col-3">
                        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link active" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="true">My Profile</a>
                            <a class="nav-link" id="v-pills-password-tab" data-toggle="pill" href="#v-pills-password" role="tab" aria-controls="v-pills-password" aria-selected="false">Change Password</a>
                        </div>
                    </div>
                    <div class="col-9">
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                                <form>
                                    <div class="form-group">
                                        <label for="edtemail">Your Email </label>
                                        <input type="hidden" class="form-control" id="edtidlogin" value='@ViewData["idLogin"]' disabled>
                                        <input type="text" class="form-control" id="edtemail" value='@ViewData["email"]' disabled>
                                    </div>
                                    <div class="form-group">
                                        <label for="edtname">Your Name</label>
                                        <input type="email" class="form-control" id="edtname" placeholder="name@example.com">
                                    </div>
                                    <div class="form-group">
                                        <label for="edtphone">Your Phone</label>
                                        <input type="number" class="form-control" id="edtphone" placeholder="085887372222222">
                                    </div>
                                    <button type="button" id="btnsaveprofile" onclick="saveProfile()" class="btn btn-primary float-right">
                                        Change Profile
                                    </button>
                                </form>
                                
                            </div>
                            <div class="tab-pane fade" id="v-pills-password" role="tabpanel" aria-labelledby="v-pills-password-tab">
                                <form>
                                    <div class="form-group">
                                        <label for="edtpassword">New Password </label>
                                        <input type="password" class="form-control" id="edtpassword" placeholder="New Password">
                                    </div>
                                    <div class="form-group">
                                        <label for="edtnewpass">Repeat New Password</label>
                                        <input type="password" class="form-control" id="edtnewpass" placeholder="Re-New Password">
                                    </div>
                                    <button type="button" onclick="ChangePassword()" id="btnchangepass" class="btn btn-primary float-right">
                                        Change Password
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



@section Scripts{
<script src="~/js/Profile.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.1.0/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.print.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<!-- Bootstrap Date-Picker Plugin -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>

}







